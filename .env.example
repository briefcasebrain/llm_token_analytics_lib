# LLM Token Analytics Environment Variables
# ==========================================
# Copy this file to .env and fill in your values

# OpenAI Configuration
# --------------------
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_ORG_ID=your_openai_org_id_here

# Anthropic Configuration
# -----------------------
ANTHROPIC_API_KEY=your_anthropic_api_key_here

# Google Cloud Configuration
# --------------------------
GOOGLE_CLOUD_PROJECT=your_gcp_project_id_here
GOOGLE_APPLICATION_CREDENTIALS=path/to/your/gcp_credentials.json

# Database Configuration (Optional)
# ---------------------------------
DB_HOST=localhost
DB_PORT=5432
DB_NAME=llm_analytics
DB_USER=analytics
DB_PASSWORD=your_secure_password_here

# Redis Configuration (Optional)
# ------------------------------
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# API Server Configuration
# ------------------------
API_HOST=0.0.0.0
API_PORT=5000
API_DEBUG=false
API_SECRET_KEY=your_secret_key_here

# Dashboard Configuration
# -----------------------
DASHBOARD_HOST=0.0.0.0
DASHBOARD_PORT=8050
DASHBOARD_DEBUG=false

# Monitoring & Alerts (Optional)
# ------------------------------
ALERT_EMAIL_FROM=alerts@yourcompany.com
ALERT_EMAIL_TO=admin@yourcompany.com
SMTP_SERVER=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASSWORD=your_app_password_here

SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Feature Flags
# -------------
ENABLE_MONITORING=false
ENABLE_ALERTS=false
ENABLE_CACHING=true
ENABLE_RATE_LIMITING=true

# Performance Settings
# --------------------
MAX_WORKERS=4
BATCH_SIZE=100
CACHE_TTL=3600
MAX_MEMORY_GB=8

# Logging Configuration
# ---------------------
LOG_LEVEL=INFO
LOG_FILE=logs/llm_analytics.log
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=5

# Data Storage
# ------------
DATA_DIR=./data
RESULTS_DIR=./results
CACHE_DIR=./cache
LOGS_DIR=./logs

# Simulation Defaults
# -------------------
DEFAULT_N_SIMULATIONS=100000
DEFAULT_CONFIDENCE_LEVEL=0.95
DEFAULT_BOOTSTRAP_ITERATIONS=10000

# Collection Defaults
# -------------------
DEFAULT_START_DAYS_AGO=30
DEFAULT_BATCH_SIZE=100
DEFAULT_RATE_LIMIT_DELAY=0.1
DEFAULT_MAX_RETRIES=3

# Environment
# -----------
ENVIRONMENT=development  # Options: development, staging, production
